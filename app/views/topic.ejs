<!DOCTYPE html>
<html>
<head>
  <% include partials/head.ejs %>
</head>
<body id="<%= pageID %>">
  <header>
    <% include partials/headerLI.ejs %>
  </header>

  <div class="container">

    <div class="page-header text-center">
      <h1><span class="fa fa-anchor"></span> Message Boards</h1>
    </div> <!-- end header -->

    <div class="topic">
      <div class="well">
        <h1><%= topicTitle %></h1><hr>
        <h3><%= topicBody %></h3>
      </div> <!-- end well -->

    <% if (topicComments > 0) { %>
    <% for(i=0; i < topicComments.length; i++) { %>
      <div class ="well">
      </div> <!-- end well -->
    <% } %>
    <% } %>

    <button type="button" data-toggle="modal" data-target="#myModal">Post Comment</button>

    <div id="myModal" class="modal fade">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h4>Post a new Comment:</h4>
          </div><!--end modal-header -->
          <div class="modal-body">
            <form action="/postComment" id="commentForm" method="post">
              <input type="hidden" value="<%= topicId %>" name="topicId" />
              <label>Comment:</label>
            </form>
            <br><textarea rows="4" cols="75" name="body" form="commentForm"></textarea>
          </div><!--end modal-body -->
          <div class ="modal-footer">
            <button type="submit" form="commentForm" class="btn btn-default"
            value="Submit">Post</button>
            <button type="button" class="btn btn-default" 
            data-dismiss="modal">Close</button>
          </div><!--end modal-footer -->
        </div><!--end modal-content -->
      </div><!--end modal-dialog -->
    </div><!--end myModal -->


    </div> <!-- end topic -->
  </div> <!-- end container -->

  <% include partials/footer.ejs %>
  <script src="/js/modal.js"></script>
</body>
</html>
