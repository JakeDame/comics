<!DOCTYPE html>
<html lang="en">
  <head>
    <title>ComMix - <%= pageTitle %></title>
    <% include partials/head.ejs %>
    <link rel="stylesheet" href="/css/magnific-popup.css">
  </head>

  <body id="<%= pageID %>">
    <header>
      <% include partials/header.ejs %>
    </header>

    <div class="container-fluid">
      <div class="content">
        <h1>This Week in Comics</h1>
        <hr>
      </div>
    </div>
    

    <div class="col-sm-8" style="background-color: lightgrey">
    <h2>Releasing This Week:</h2>
    <div class="container-covers">
      <% if (coverArt.length > 0) { %>
      <% for(i=0; i < coverArt.length; i++) { %>
        <div class="item-covers">
          <a class="popup-modal" href="#test-modal">
            <img src="/images/covers/<%=coverArt[i]%>" alt="<%=title[i]%>">
          </a>
          <p><strong><%= title[i] %></strong></p>
          <div id="test-modal" class="white-popup-block mfp-hide">
            <h1><%= title[i] %></h1>
            <img src="/images/covers/<%=coverArt[i]%>" alt="<%=title[i]%>">
            <p><a class="popup-modal-dismiss" href="#">Close</a></p>
          </div>
        </div>
        <% } %>
        <% } %>
      </div>
    </div>
    </div>
    <div class="col-sm-4" style="background-color: darkgrey">
      <h2>News:<h2>
    </div>

    <% include partials/footer.ejs %>
    <script src="/js/jquery.magnific-popup.js"></script>
    <script src="/js/modal.js"></script>
  </body>
</html>
