<!DOCTYPE html>
<html lang="en">
  <head>
    <title>ComMix - <%= pageTitle %></title>
    <% include partials/head.ejs %>
    <link rel="stylesheet" href="/css/magnific-popup.css">
  </head>

  <body id="<%= pageID %>">
    <header>
      <% include partials/header.ejs %>
    </header>

    <div class="container-fluid">
      <div class="content">
        <h1>This Week in Comics</h1>
        <hr>
      </div>
    </div>
    

    <div class="col-sm-8" style="background-color: lightgrey">
    <h2>Releasing This Week:</h2>
    <div class="container-covers">
      <% if (coverArt.length > 0) { %>
      <% for(i=0; i < coverArt.length; i++) { %>
        <div class="item-covers">
          <img id="<%= i %>" data-toggle="modal" data-target="#myModal"
           src="/images/covers/<%=coverArt[i]%>" alt="<%=title[i]%>">
          <p><strong><%= title[i] %></strong></p>
          <div id="myModal" class="modal fade"> 
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-body">
                  <img class="showimage img-responsive" src=""> 
                  <h1 class="comic title"></h1>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-default" 
                  data-dismiss="modal">Close</button>
                </div>
              </div>
            </div>
          </div>
        </div>
        <% } %>
        <% } %>
      </div>
    </div>
    </div>
    <div class="col-sm-4" style="background-color: darkgrey">
      <h2>News:<h2>
    </div>

    <% include partials/footer.ejs %>
    <script src="/js/jquery.magnific-popup.js"></script>
    <script src="/js/modal.js"></script>
  </body>
</html>
