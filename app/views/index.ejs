<!DOCTYPE html>
<html lang="en">
  <head>
    <title>This Week in Comics - <%= pageTitle %></title>
    <% include partials/head.ejs %>
  </head>

  <body id="<%= pageID %>">
    <header>
      <% include partials/header.ejs %>
    </header>

    <div class="container-fluid">
      <div class="content">
        <h1>This Week in Comics</h1>
        <hr>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-8">
        <div class="covers">
          <h2>Releasing This Week:</h2>
          <% if (coverArt.length > 0) { %>
          <% for(i=0; i < coverArt.length; i++) { %>
            <img src="/images/covers/<%= coverArt[i] %>" alt="<%= title[i] %>">
          <% } %>
          <% } %>
        </div>
      </div><!-- /.col-sm-8 --> 
      <div class="col-sm-4">
        <h2>News</h2>
      </div><!-- /.col-sm-8 --> 
    </div><!-- /.row --> 

    <script src="/js/jquery.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
  </body>
</html>
